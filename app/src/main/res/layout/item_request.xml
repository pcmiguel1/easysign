<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Contract of employment"
        android:textColor="@color/text_color"
        android:fontFamily="@font/urbanist_bold"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/category"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/sign2"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jane Cooper"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/names"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Me, Cody, Andy"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textColor="@color/text_color_gray"
                    android:textSize="11sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/need_action"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Needs action"
                    android:textColor="@color/need_action2"
                    android:fontFamily="@font/urbanist_semibold"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>